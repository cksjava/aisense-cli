#!/bin/bash

# Define version
VERSION="1.0.0"

# Function to display the version
show_version() {
    echo "aisense version $VERSION"
}

# Parse command-line arguments
while [[ "$1" != "" ]]; do
    case $1 in
        -v | --version )
            show_version
            exit 0
            ;;
        * )
            echo "Unknown option: $1"
            exit 1
            ;;
    esac
    shift
done
